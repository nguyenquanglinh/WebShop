
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edmin</title>
    <link type="text/css" href="/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="/Areas/Admin/Content/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="/Areas/Admin/Content/css/theme.css" rel="stylesheet">
    <link type="text/css" href="/Areas/Admin/Content/images/icons/css/font-awesome.css" rel="stylesheet">

    <script src="/Areas/Admin/Content/js/jquery-1.9.1.min.js"></script>
    <script src="/Areas/Admin/Content/js/jquery-ui-1.10.1.custom.min.js"></script>
    <script src="/Areas/Admin/Content/js/bootstrap.min.js"></script>
    <script src="/Areas/Admin/Content/js/datatables/jquery.dataTables.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="index.html">
                    Admin
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav nav-icons">
                        <li class="active">
                            <a href="#">
                                <i class="icon-envelope"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon-eye-open"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon-bar-chart"></i>
                            </a>
                        </li>
                    </ul>

                    <form class="navbar-search pull-left input-append" method="post" action="/Admin/ProductAdmin/Search">
                        <input type="text" name="s" class="span3">
                        <button class="btn" type="button">
                            <i class="icon-search"></i>
                        </button>
                    </form>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div><!-- /navbar -->



    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar">

                        <ul class="widget widget-menu unstyled">
                            <li class="active">
                                <a href="/Admin/SanPham/Index">
                                    <i class="menu-icon icon-dashboard"></i>
                                    Product
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/ProductAdmin/Index" class="collapsed" data-toggle="collapse">
                                    <i class="menu-icon icon-bullhorn"></i>
                                    Category
                                </a>
                            </li>

                            <li>
                                <a href="task.html">
                                    <i class="menu-icon icon-tasks"></i>
                                    Order list
                                    <b class="label orange pull-right">19</b>
                                </a>
                            </li>
                        </ul><!--/.widget-nav-->



                        <ul class="widget widget-menu unstyled">

                            <li>
                                <a href="#">
                                    <i class="menu-icon icon-signout"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>

                    </div><!--/.sidebar-->
                </div><!--/.span3-->

                <div class="span9">
                    @RenderBody()

                </div><!--/.span9-->
            </div>
        </div><!--/.container-->
    </div><!--/.wrapper-->

    <div class="footer">
        <div class="container">


            <b class="copyright">&copy; 2014 Edmin - EGrappler.com </b> All rights reserved.
        </div>
    </div>


    <script>
	    $(document).ready(function () {
	        $('.datatable-1').dataTable();
	        $('.dataTables_paginate').addClass("btn-group datatable-pagination");
	        $('.dataTables_paginate > a').wrapInner('<span />');
	        $('.dataTables_paginate > a:first-child').append('<i class="icon-chevron-left shaded"></i>');
	        $('.dataTables_paginate > a:last-child').append('<i class="icon-chevron-right shaded"></i>');
	    });
    </script>
</body>
