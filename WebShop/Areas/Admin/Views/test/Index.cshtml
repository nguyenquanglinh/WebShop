@using WebShop.Models
@model List<Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">

    <div class="module">
        <div class="module-head">
            <h3>Tables</h3>
            <script type="text/javascript">
         function ConfirmDialog(){
              var result = confirm("Are you sure to Remove?");
              if (result) {
                  alert('Removed');
               }
         }
            </script>
        </div>
        <div class="module-body">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>

                        <th>Category ID</th>
                        <th>Category Name</th>

                        <th colspan="3">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Trademark item in Model)
                    {
                        <tr>

                            <td>@item.ID_Trademark</td>
                            <td>@item.Name</td>

                            <td><a href="/Admin/ProductAdmin/Edit/@item.ID_Trademark">Edit</a></td>
                            <td><a onclick="ConfirmDialog()" href="/Admin/ProductAdmin/Delete/@item.ID_Trademark">Remove</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="module-head">
            <form method="get" action="/Admin/ProductAdmin/Create">
                <input type="submit" value="Create">
            </form>
        </div>
    </div>



    <br />

</div>

