@using WebShop.Models
@model Product

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật thông tin sản phẩm</h4>
            </div>
            <div class="modal-body">
                <p>Mời bạn nhập thông tin sản phẩm: </p>
                <form action="">
                    <div class="form-group">
                        <label for="ma">Mã sản phẩm:</label>
                        <label type="text" class="form-control" id="ma">@Model.ID_Product</label>
                    </div>
                    <div class="form-group">
                        <label for="ten">Tên sản phẩm:</label>
                        <input type="text" class="form-control" id="ten" value="@Model.Name" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="comment">Giá:</label>
                        <input class="form-control" rows="5" id="comment" value="@String.Format("{0:0,0 VNĐ}",Model.Price)" name="Price">
                    </div>

                    <div class="form-group">
                        <label for="loai">Số Lượng:</label>
                        <input type="text" class="form-control" id="loai" value="@Model.Quantity" name="Quan">
                    </div>
                    <div class="form-group">
                        <label for="nsx">Nhà sản xuất:</label>
                        <input type="text" class="form-control" id="nsx">
                    </div>
                    <div class="form-group">
                        <label for="xuatxu">Mô tả:</label>
                        <input type="text" class="form-control" id="xuatxu" value="@Model.Description" name="Description">
                    </div>
                    <button type="submit" class="btn btn-default">Cập nhật</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


